@model IEnumerable<Car_App.Core.Dto.CarDto>

<h1 class="mb-4">Cars</h1>

<a asp-controller="Cars"
   asp-action="Create"
   class="btn btn-success mb-3">
    + Create new car
</a>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Color</th>
            <th>Mileage</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var car in Model)
            {
                <tr>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td>@car.Color</td>
                    <td>@car.Mileage</td>

                    <td class="text-center">
                        <a asp-controller="Cars"
                           asp-action="Edit"
                           asp-route-id="@car.Id"
                           class="btn btn-sm btn-warning me-1">
                            Edit
                        </a>

                        <form asp-controller="Cars"
                              asp-action="Delete"
                              asp-route-id="@car.Id"
                              method="post"
                              class="d-inline"
                              onsubmit="return confirm('Are you sure?');">
                            <button type="submit"
                                    class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">
                    No cars found
                </td>
            </tr>
        }
    </tbody>
</table>
